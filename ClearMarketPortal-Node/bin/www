#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('clearmarketportal-node:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '8081');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
const config = {pingTimeout: 60000};
const io = require('socket.io')(server, config);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port, () => {
  console.log(`ClearMarketPortal-Node is listening on port ${port}`);
});
server.on('error', onError);
server.on('listening', onListening);
var priceData = [
  {
    stock: 'GOOG',
    price: 1001.67,
    volume: 244677557
  },
  {
    stock: 'APPL',
    price: 120.56,
    volume: 306837209
  },
  {
    stock: 'AMZN',
    price: 1500.67,
    volume: 256798553
  },
  {
    stock: 'MSFT',
    price: 126.67,
    volume: 578940448
  }
];

io.on('connection', socket => {
  socket.emit('price', priceData);
  socket.on('priceUpdate', () => {
    socket.emit('price', priceData);
  })
})
/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
